{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "outDir": "js",
    "listEmittedFiles": true,
    "moduleResolution": "node",
    "lib": [ "es2015", "dom" ],
    "preserveConstEnums": true,
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
